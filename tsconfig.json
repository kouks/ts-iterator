{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
